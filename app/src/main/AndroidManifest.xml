<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softdev.instaphoto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Configuration.AppHandler"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Configuration.AppHelper"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.Comments"
            android:label="@string/comments_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CommentsActivity" />
        <activity
            android:name=".Activity.Login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.Likes"
            android:label="@string/likes_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.LikesActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.UserProfile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.UserProfile"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.Followers"
            android:label="@string/title_activity_followers"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.Following"
            android:label="@string/title_activity_following"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.Publish"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.Register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.Hashtags"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Notifications"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Notifications"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Activity.Settings"
            android:label="@string/settings_activity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Activity.BlockList"
            android:label="@string/block_list_activity"
            android:screenOrientation="portrait" />
    </application>

</manifest>